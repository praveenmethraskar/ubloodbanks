<!-- page wrapper Start -->
<div class="page-wrapper">

    <!-- Header Section Start -->
    <header class="header-wrap style2">
        <div class="header-top bg-mine-shaft">
            <div class="container">

                <div class="row align-items-center">

                    <div class="col-xl-4 col-lg-12">
                        <div class="header-top-right">

                            <!-- <div class="user-login">
                                <a href="login.html"><i class="flaticon-user-3"></i> Login</a>
                            </div> -->

                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="header-bottom">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-xl-3 col-lg-6 col-md-6 col-5">
                        <a href="index.html" class="logo"><img src="~/css/img/logo-h.png" alt="Image"></a>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-7">
                        <div class="main-menu-wrap">
                            <div class="menu-close xl-none">
                                <a href="javascript:void(0)"><i class="las la-times"></i></a>
                            </div>
                            <div id="menu">
                                <ul class="main-menu list-style">
                                    <li>
                                        <a asp-action="AdminRegistration">Add more Admins</a>
                                    </li>
                                    <li>
                                        <a asp-action="AddHospitals">Add Hospitals</a>
                                    </li>
                                    <li>
                                        <a asp-action="viewdetails">View Donors</a>
                                    </li>

                                </ul>
                            </div>
                        </div>
                        <div class="mobile-bar-wrap">

                            <div class="mobile-menu xl-none">
                                <a href="javascript:void(0)"><i class="las la-bars"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 lg-none">
                        <div class="header-bottom-right">
                            <a asp-action="Logout" class="btn style2"><i class="flaticon-user-3"></i> Logout </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>


    <!-- Content Wrapper Start -->
    <div class="content-wrapper">
        <div class="breadcrumb-wrap bg-f breadcrumb-3">
            <div class="overlay bg-blue op-4"></div>
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="breadcrumb-title">
                            <h2>Welcome @Context.Session.GetString("name")</h2>
                            @*       <ul class="breadcrumb-menu list-style">
                            <li><a href="#">Dashboard </a></li>
                            <li>Register </li>
                            </ul>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Breadcrumb End -->
        <!-- Account Section start -->
        <section class="Login-wrap pt-100 pb-100 bg-papermint">
            <div class="container">
                <div class="col-xl-12">
                    <div class="login-form-wrap">
                        <div class="login-header">
                            <h2>Register</h2>
                        </div>
                        <div class="login-form">
                            <div class="login-body">
                                <div class="row">
                                    <div class="col-lg-12 col-md-12">
                                       
                                                <form asp-action="AdminRegistration">
                                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                                    <div class="col-lg-12 col-md-12">
                                                        <div class="form-group">
                                                            <label asp-for="fullname" class="control-label">Full Name</label>
                                                            <input asp-for="fullname" class="form-control" />
                                                            <span asp-validation-for="fullname" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-12 col-md-12">
                                                        <div class="form-group">
                                                            <label asp-for="mail" class="control-label">Email Id</label>
                                                            <input asp-for="mail" class="form-control" />
                                                            <span asp-validation-for="mail" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-6 col-md-6">

                                                        <div class="form-group">
                                                            <label asp-for="Password" class="control-label">Password</label>
                                                            <input asp-for="Password" class="form-control" />
                                                            <span asp-validation-for="Password" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-6 col-md-6">
                                                        <div class="form-group">
                                                            <label asp-for="ConfirmPassword" class="control-label"> Confirm Password</label>
                                                            <input asp-for="ConfirmPassword" class="form-control" />
                                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <button type="submit" value="Create" class="btn btn-primary"> Create Admin</button>
                                                    </div>
                                                </form>
                                       
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
