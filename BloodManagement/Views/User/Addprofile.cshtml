@model BloodManagement.Models.AddMoreDetails

@using Microsoft.AspNetCore.Http

@{
   ViewData["Title"] = "Addprofile";
    ViewBag.Title = "Addprofile";
}

<!--Preloader starts-->
<div class="preloader js-preloader">

    <img src="~/css/img/preloader.gif" />
</div>
<!--Preloader ends-->
<!-- page wrapper Start -->
<div class="page-wrapper">

    <!-- Header Section Start -->
    <header class="header-wrap style2">
        <div class="header-top bg-mine-shaft">
            <div class="container">

                <div class="row align-items-center">
                    <div class="col-xl-4 col-lg-12">
                        <div class="header-top-right"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="header-bottom">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-xl-3 col-lg-6 col-md-6 col-5">
                        <a href="index.html" class="logo"><img src="~/css/img/logo-h.png" alt="Image"></a>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-7">
                        <div class="main-menu-wrap">
                            <div class="menu-close xl-none">
                                <a href="javascript:void(0)"><i class="las la-times"></i></a>
                            </div>
                            <div id="menu">
                                <ul class="main-menu list-style">
                                    <li>
                                        <a asp-action="Addprofile">Add more details</a>
                                    </li>
                                    <li>
                                        <a asp-action="viewprofile">View Profile</a>
                                    </li>
                                    <li>
                                        <a asp-action="Donations">Donations</a>
                                    </li>
                                    <li>
                                        <a asp-action="Listdonations">List Donations</a>
                                    </li>

                                </ul>
                            </div>
                        </div>
                        <div class="mobile-bar-wrap">

                            <div class="mobile-menu xl-none">
                                <a href="javascript:void(0)"><i class="las la-bars"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 lg-none">
                        <div class="header-bottom-right">
                            <a asp-action="Logout" class="btn style2"><i class="flaticon-user-3"></i> Logout </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>


    <!-- Content Wrapper Start -->
    <div class="content-wrapper">
        <div class="breadcrumb-wrap bg-f breadcrumb-3">
            <div class="overlay bg-blue op-4"></div>
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="breadcrumb-title">
                            <h2>Welcome @Context.Session.GetString("name")</h2>
                            @*       <ul class="breadcrumb-menu list-style">
                            <li><a href="#">Dashboard </a></li>
                            <li>Register </li>
                            </ul>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <section class="Login-wrap pt-100 pb-100 bg-papermint">
            <div class="container">
                <div class="col-xl-12">
                    <div class="login-form-wrap">
                        <div class="login-header">
                            <h2>Add full details</h2>
                        </div>
                        <div class="login-form">
                            <div class="login-body">
                               
                                        <form asp-action="Addprofile">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                    
                                                        <div class="form-group">
                                                            <label asp-for="DoB" class="control-label"></label>
                                                            <input asp-for="DoB" type="date"  class="form-control" />
                                                            <span asp-validation-for="DoB" class="text-danger"></span>
                                                        </div>
                                                        <div class="form-group">
                                                            <label asp-for="Bloodgroup" class="control-label"></label>
                                                            <input asp-for="Bloodgroup" class="form-control" />
                                                            <span asp-validation-for="Bloodgroup" class="text-danger"></span>
                                                        </div>
                                                        <div class="form-group">
                                                            <label asp-for="mobile" class="control-label"></label>
                                                            <input asp-for="mobile" type="number" class="form-control" />
                                                            <span asp-validation-for="mobile" class="text-danger"></span>
                                                        </div>
                                                        <div class="form-group">
                                                            <label asp-for="address1" class="control-label"></label>
                                                            <input asp-for="address1" class="form-control" />
                                                            <span asp-validation-for="address1" class="text-danger"></span>
                                                        </div>
                                                        <div class="form-group">
                                                            <label asp-for="district" class="control-label"></label>
                                                            <input asp-for="district" class="form-control" />
                                                            <span asp-validation-for="district" class="text-danger"></span>
                                                        </div>
                                                        <div class="form-group">
                                                            <label asp-for="states" class="control-label"></label>
                                                            <input asp-for="states" class="form-control" />
                                                            <span asp-validation-for="states" class="text-danger"></span>
                                                        </div>
                                                        <div class="form-group">
                                                            <label asp-for="pincode" class="control-label"></label>
                                                            <input asp-for="pincode" type="number" class="form-control" />
                                                            <span asp-validation-for="pincode" class="text-danger"></span>
                                                        </div>
                                                        <div class="form-group">
                                                        <button type="submit"  class="btn btn-primary" >Add</button>
                                                        </div>
                                        </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>



    </div>
    <!-- Content Wrapper End -->

</div>
<!-- Page wrapper End -->
